<%= form_with(model: review, class: "contents") do |form| %>

  <%= render "shared/error_msgs", obj: review %>

  <div class="my-2 mx-2 bg-neutral-200">
    <%= form.textarea :body, rows: 4, autofocus: true, 
                      class: "block shadow-sm rounded-md border border-gray-600 p-2 mt-2 w-full" %>
  </div>

  <%= form.hidden_field :product_id %>

  <div class="inline">
    <%= form.submit "Save", class: "w-full sm:w-auto rounded-md mb-2 ml-2 px-2 bg-blue-600 hover:bg-blue-500 text-white inline-block text-sm cursor-pointer" %>
  </div>
<% end %>
