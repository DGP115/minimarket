<main class="flex flex-col justify-center items-center 
          bg-indigo-200 gap-4 p-4 w-1/2 mx-auto border rounded-md">  
  <section class="flex flex-col items-center gap-1">
    <h1 class="font-bold text-2xl text-blue-600 dark:text-sky-400">Mini-Market </h1>
    <p class="text-blue-600 dark:text-sky-400">A <em class="font-bold">Someguy</em> production.</p>
  </section>

  <section class="flex flex-col items-center bg-white p-4 rounded-lg shadow-md w-96">

    <h2 class="font-bold text-2xl mb-5">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
                 class: "flex flex-col w-full gap-4") do |f| %>

      <div class="flex flex-col gap-1">
        <%= f.label :email, class: "font-semibold text-sm" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
                          class: "border rounded px-3 py-2 w-full text-sm font-medium" %>
      </div>

      <div class="mt-2 flex flex-col gap-1">
        <%= f.label :password, class: "font-semibold text-sm" %>
        <%= f.password_field :password, autocomplete: "current-password",
                              class: "border rounded px-3 py-2 w-full text-sm font-medium" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center gap-2 my-2">
          <%= f.check_box :remember_me, class: "w-4 h-4" %>
          <%= f.label :remember_me, class: "text-sm font-medium text-gray-600" %>
        </div>
      <% end %>

      <div class="w-full mt-4">
        <%= f.submit "Log in",
            class: "w-full bg-blue-600 text-white font-semibold py-2 rounded hover:bg-blue-700 transition" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

  </section>
</main>
