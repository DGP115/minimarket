<% if obj.errors.any? %>
  <div class="px-4 py-2 my-2 bg-yellow-200 border border-red-400 rounded-md shadow-md w-fit">
    <h3 class="mb-2 font-semibold text-red-700">
      <%= pluralize(obj.errors.count, "error") %> prohibited this 
      <%= obj.class.name.downcase %> from being saved:
    </h3>

    <ol class="space-y-1 text-red-600 list-decimal list-inside">
      <% obj.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ol>

  </div>
<% end %>

