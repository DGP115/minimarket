<%= form_with(model: @product_category, local: true) do |f| %>
  <div class="grid grid-cols-1 mt-2 mb-4 md:w-1/2">
    <div class="block w-full row-start-1 p-2 mb-1 font-semibold bg-indigo-100 border border-gray-500 rounded-md md:col-span-2 shadow-lg/50">
      Parent Category:
      <span class="ml-2 text-base font-bold text-indigo-700"><%= @product_category.parent.name %></span>
    </div>

    <%= f.hidden_field :parent_id, value: @product_category.parent.id %>

    <div class="block w-full row-start-2 p-2 border border-gray-500 rounded-md bg-indigo-50 shadow-lg/50">

      <%= f.label "This Category's name", class: "block text-sm font-semibold text-indigo-700" %>
      <%= f.text_field :name, class: "w-full mt-1 px-2 block 
                                      border border-gray-300 rounded-md shadow-lg/50
                                      bg-white 
                                      focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>

      <%= f.label :description, class: "mt-3 block text-sm font-semibold text-indigo-700" %>
      <%= f.text_area :description, class: "w-full mt-1 px-2 block 
                                            border border-gray-300 rounded-md shadow-lg/50 
                                            focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm
                                            bg-white" %>
    </div>

    <div class="row-start-3 mt-2">
      <%= f.submit class: "button button-sm bg-blue-500 text-yellow-400 
                           hover:scale-110 hover:invert" %>
                           
      <%= button_to "Back", product_category_path(@product_category.parent), 
                          data: { turbo_frame: "categorytree_productlist_toggle" },
                          class: "button button-sm bg-gray-500 text-yellow-400 
                                  hover:scale-110 hover:invert ml-2" %>
    </div>

  </div>
<% end %>
