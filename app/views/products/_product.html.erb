<div>
  <p>
    <strong>Title:</strong>
    <%= link_to product.title, product_path(product) %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>
  <div>
    <% if product.seller_id == current_user.id %>
      <%= link_to "Edit", edit_product_path(product) %>
    <% end %>
  </div>
</div>