<header class="sticky top-0 z-20 bg-indigo-50 shadow-lg border rounded-md border-stone-400">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <!-- Top Row -->
    <!--  All children in one flex row, left-to-right -->
    <div class="flex items-center h-14 w-full">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to "Minishop", root_path, 
                    class:"text-xl font-sans font-semibold tracking-tight pt-1" %>
      </div>
      <!-- Right side of navbar -->

      <!-- This div grows to take up all available space between logo and right edge -->
      <div class="ml-auto mr-4 items-center space-x-6">
        <%= link_to "About", about_path, 
                    class:"text-lg font-sans font-semibold tracking-tight pt-1
                           hover:text-indigo-700" %>
      </div>

      <!--The rightmost side of the navbar adapts between desktop and mobile screen sizes.  
          Dropdowns for both are included here and a combination of Tailwind classes and stimulus controllers
          toggle to hide/unhide the appropriate dropdown menus -->
          
      <!-- Desktop dropdown -->
      <div class="hidden sm:flex sm:items-center">
        <!-- User Menu -->
        <div class="hidden sm:flex sm:items-center sm:space-x-6">
          <%= render "layouts/navbar/dropdown_user_menu" %>
        </div>
      </div>

      <!-- Mobile Menu Dropdown Wrapper -->
      <div data-controller="mobilenav" class="relative sm:hidden">
        <!-- Hamburger Button (mobile only, fixed position in header row) -->
        <div class="flex justify-end">
          <button type="button"
                  aria-expanded="false"
                  data-action="click->mobilenav#toggle"
                  class="p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100
                        focus:outline-none"
                  aria-label="Toggle menu">
                  <!-- Hamburger Button icon -->
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg"
                 fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Menu Content (Hidden by default.  It slides down) -->
        <div data-mobilenav-target="menu"
             class="hidden opacity-0 scale-95 
                    transition ease-out duration-200 
                    origin-top absolute -translate-x-1/2 top-full mt-2 
                    min-w-[10rem] max-w-[60vw]
                    z-50 px-4 py-2 
                    justify-items-center">
          <%= render "layouts/navbar/dropdown_user_menu" %>
        </div>  
      </div>
      
      <% if user_signed_in? && current_user.cart != nil %>
        <%= render partial: "layouts/navbar/cart_icon", locals: { cart: current_user.cart } %>
      <% end %>

    </div>

    <!-- Second Row -->
    <% if @root_categories.any? %>
      <div class="grid grid-cols-6 gap-x-4 py-0 mb-1 
                  text-center
                  border rounded-md border-indigo-200
                  bg-indigo-100">
        <% @root_categories.each do |root| %>
          <div>
            <%= link_to root.name, product_category_path(root), 
                                   data: { turbo_frame: "categorytree_productlist_toggle" },
                                   class: "text-blue-600 hover:font-bold hover:cursor-pointer text-sm" %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500">No product categories available.</p>
    <% end %>

  </div>
</header>