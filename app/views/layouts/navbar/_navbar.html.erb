<header class="border-b sticky top-0 z-20 bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Top Row -->
    <div class="flex justify-between items-center h-16 w-full">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <%= link_to "Minishop", root_path, 
                    class:"text-xl font-primary font-bold tracking-tight pt-1" %>
      </div>

      <!--The navbar adapts between desktops and mobile screen sizes.  
          Dropdowns for both are included and  a combination oif Tailwind classes and stimulus controllers
          toggle dto hine/unhide the appropriate dropdown menus -->
          
      <!-- Mobile Menu Wrapper -->
      <div data-controller="mobilenav" class="relative sm:hidden">
        <!-- Hamburger Button (mobile only, fixed position in header row) -->
        <div class="flex justify-end">
          <button type="button"
                  aria-expanded="false"
                  data-action="click->mobilenav#toggle"
                  class="p-2 rounded-md text-gray-500 hover:text-gray-700 hover:bg-gray-100
                        focus:outline-none"
                  aria-label="Toggle menu">
            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg"
                  fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>

        <!-- Mobile Menu Content (Hidden by default.  It slides down) -->
        <div data-mobilenav-target="menu"
             class="hidden opacity-0 scale-95 
                    transition ease-out duration-200 
                    origin-top absolute left-1/2 -translate-x-1/2 top-full mt-2 
                    min-w-[12rem] max-w-[60vw]
                    rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 
                    z-50 px-4 py-2 
                    justify-items-center">
          <%= render "layouts/navbar/dropdown_user_menu" %>
        </div>  
      </div>

      <!-- Desktop nav -->
      <div class="hidden sm:flex sm:items-center">
        <!-- User Menu -->
        <div class="hidden sm:flex sm:items-center sm:space-x-6">
          <%= render "layouts/navbar/dropdown_user_menu" %>
        </div>
      </div>
    </div>

  </div>
</header>