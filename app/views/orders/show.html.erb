<turbo-frame id="orders_list">
	<% if @order!= nil %>
		<div class="w-full pl-8 md:w-2/3"> 

			<h1 class="mb-4 text-base font-semibold">
				<em><%= current_user&.name&.titlecase %></em>
			
				<div class="text-sm font-normal">
					Order #<%= @order.id %> - Placed on <%= @order.created_at.strftime("%B %d, %Y")%> at: <%= @order.created_at.strftime("%I:%M %P") %>
				</div>
			</h1>
			
			<%= render partial: "orders/order_table", locals: {order: @order, order_lineitems: @order_lineitems } %>

			<!-- Button container -->
			<div class="flex mt-4 space-x-4 md:flex md:justify-end md:space-x-2 md:flex-row">
				<!-- Left column stack (on mobile) -->
				<div class="flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2">
					<%= link_to "Back", orders_path,
							class: "inline-block font-normal cursor-pointer sm:w-auto
											text-center border rounded-md px-2 
											bg-indigo-200 hover:scale-110 hover:bg-indigo-300 
											transition duration-200 ease-in-out" %>
					<%= button_to "Delete", @order,
												method: :delete,
												form_class: "inline-block m-0", 
												class: "inline-block font-normal cursor-pointer sm:w-auto
																text-center border rounded-md px-2 
																bg-red-300 hover:scale-110 hover:bg-red-600 
																transition duration-200 ease-in-out", 
												data: { turbo_confirm: "Are you sure?" } %>
				</div>

			</div>
		</div>
	<% else %>
		<h1 class="mb-4 text-base font-semibold">
			There is no order to display
		</h1>
	<% end %>
</turbo-frame>
