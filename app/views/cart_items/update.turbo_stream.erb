<%= turbo_stream.replace dom_id(@cart_item) do %>
  <%= render partial: "carts/cart_item_row", 
             locals: { item: @cart_item,
                       index: @cart_item.cart.cart_items.index(@cart_item),
                       editable: true } %>
<% end %>

<%= turbo_stream.replace "cart-totals" do %>
  <%= render "carts/cart_totals", cart: @cart_item.cart %>
<% end %>