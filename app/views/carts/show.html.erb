<% if @cart != nil %>
	<div class="md:w-2/3 w-full pl-8"> 

		<h1 class="font-semibold text-base mb-4">
			<em><%= current_user&.name&.titlecase %></em>:  Your cart's contents:
		</h1>

		<%#  "editable" is used as a switch so that the same form is used by sho wand edit methods %>
		<%= render partial: "carts/cart_table", locals: { cart: @cart, cart_items: @cart_items, editable: false } %>

		<!-- Button container -->
		<div class="flex space-x-4 mt-4 md:flex md:justify-end md:space-x-2 md:flex-row">
			<!-- Left column stack (on mobile) -->
			<div class="flex flex-col space-y-2 md:flex-row md:space-y-0 md:space-x-2">
				<%= link_to "Edit", edit_cart_path, 
										class: "inline-block font-normal cursor-pointer sm:w-auto
														text-center border rounded-md px-2  
														bg-gray-100 hover:scale-110 hover:bg-gray-400
														transition duration-200 ease-in-out" %>

				<%= button_to "Delete", @cart,
											method: :delete,
											form_class: "inline-block m-0", 
											class: "inline-block font-normal cursor-pointer sm:w-auto
															text-center border rounded-md px-2 
															bg-red-300 hover:scale-110 hover:bg-red-600 
															transition duration-200 ease-in-out", 
											data: { turbo_confirm: "Are you sure?" } %>
			</div>

			<!-- Right column stack (on mobile) -->
			<div class="flex flex-col space-y-2 pl-6 md:flex-row md:space-y-0 md:space-x-2">
				<%= link_to(product_categories_path, class: "flex items-center justify-center font-normal cursor-pointer sm:w-auto
																				border rounded-md px-4
																				bg-indigo-200 hover:scale-110 
																				transition duration-200 ease-in-out") do %>
					
					<%= render_icon("arrow_left", classes: "inline-block mr-2 w-5 h-5 bg-gray-100 rounded-md 
																				stroke-purple-600 hover:bg-gray-400") %>
					Continue Shopping
				<% end %>

				<%= link_to(about_path, class: "flex items-center justify-center font-normal cursor-pointer sm:w-auto
																				border rounded-md px-4
																				bg-green-200 hover:scale-110
																				transition duration-200 ease-in-out") do %>
					Checkout
					<%= render_icon("arrow_right", classes: "inline-block ml-2 w-5 h-5 bg-gray-100 rounded-md 
																				stroke-purple-600 hover:bg-gray-400") %>
				<% end %>
			</div>
		</div>
	</div>
<% else %>
	<h1 class="font-semibold text-base mb-4">
		There is no cart to display
	</h1>
<% end %>